<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BlueTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#284B63</item>
        <item name="colorPrimaryDark">#021430</item>
        <item name="colorAccent">#3C6E71</item>
    </style>

    <style name="myStyle">
        <item name="android:textColor">#003300</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonStyle">
        <item name="android:color">#6165e8</item>
        <item name="android:height">75dp</item>
    </style>


</resources>
